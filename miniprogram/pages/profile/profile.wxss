/* pages/profile/profile.wxss */

/* 1父元素相对定位 */
.profile{
  background: #a54847;
  height:400rpx;
  text-align:center;/*子元素剧中*/
  position:relative;/*相对定位*/
  width:100%;

}
/* 2子元素绝对定位 圆角50% */
.profile-img{
  position: absolute;
  width:200rpx;
  height:200rpx;
  display: block;
  overflow: hidden;
  border-radius:50%;
  left:50%;
  transform: translate(-50%,60rpx);
}